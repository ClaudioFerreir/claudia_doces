    <section class="food_section layout_padding-bottom">
      <div class="container">
        <div class="heading_container heading_center">
          <h2>
            Nossas Especialidades
          </h2>
        </div>

        <ul class="filters_menu">
          <li class="active" data-filter="*">Todos</li>
          <% @subjects.each do |subject| %>
            <li data-filter=".<%= subject.description.gsub(/\s+/, "") %>"><%= subject.description %></li>
          <% end %>
        </ul>

        <div class="filters-content">
          <div class="row grid align-itens-center">
            <% @sweets.each do |sweet| %>
              <div class="col-12 col-sm-6 col-lg-4 all <%= sweet.subject.description.gsub(/\s+/, "") %>">
                <div class="box">
                  <div class="card-img-top" >
                    <%= cl_image_tag(sweet.image.key, width: 479, height: 215, crop: :fill) %>
                  </div>
                  <div class="card-body">
                    <h5 class= "card-title">
                      <%= sweet.name %>
                    </h5>
                    <p class="card-text">
                      <%= sweet.description %>
                    </p>
                    <div class="price">
                      <h6><%= format("R$ %.2f", sweet.price)%></h6>
                    </div>
                    <div class="order">    
                      <a href="#" class="btn-custom">
                        Faça o seu Pedido<i class="bi bi-cart"></i>
                      </a>
                    </div>
