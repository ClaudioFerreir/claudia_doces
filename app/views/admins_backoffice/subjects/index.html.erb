<div class="d-sm-flex align-items-center justify-content-between mb-4">
  <h1 class="page-header">Listando Categorias</h1>
</div>

<div class="table-responsive">
	<table class="table table-striped table-bordered table-hover">
		<thead>
			<tr>
				<th>#</th>
				<th>Descrição</th>
				<th>
					<%= link_to new_admins_backoffice_subject_path, class: "btn btn-success btn-circle btn-sm" do%>
					  <i class="fas fa-plus"></i>
					<% end %>
				</th>
			</tr>
		</thead>
		<tbody>
			<% @subjects.each do |subject| %>
				<tr>
					<td><%= subject.id %></td>
					<td><%= subject.description %></td>
					<td style="width: 100px">
						<%= link_to edit_admins_backoffice_subject_path(subject), class: "btn btn-primary btn-circle btn-sm" do%>
						  <i class="fas fa-edit"></i>
			    		<% end %>
						
						<%= link_to admins_backoffice_subject_path(subject), method: :delete, class: "btn btn-danger btn-circle btn-sm", data: { confirm: "Deseja realmente excluir esta categoria?"} do%>
						  <i class="fas fa-trash"></i>
			    	<% end %>
          </td>
				</tr>
			<% end %>
		</tbody>
	</table>

	<div class="container pagination justify-content-center">
		<%= paginate @subjects %> 
	</div>

</div>

