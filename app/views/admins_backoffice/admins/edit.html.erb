
<div class="d-sm-flex align-items-center justify-content-between mb-4">
	<h1 class="page-header">Editando</h1>
</div>

<div class="card col-sm-12 col-md-12 col-lg-8 offset-lg-2">
	<div class="card-body">
		<%= form_with(model: [ :admins_backoffice, @admin ], local:true) do |form| %>
			<div class="form-group">
				<%= form.label :email %>
				<%= form.text_field :email, class: "form-control mb-3", placeholder: "Email do administrador" %>
			</div>
			<div class="form-group">
				<%= form.label :senha %>
				<%= form.text_field :password, class: "form-control mb-3", placeholder: "Password do administrador" %>
			</div>
			<div class="form-group">
				<%= form.label :confirmação_da_senha %>
				<%= form.text_field :password_confirmation, class: "form-control mb-3", placeholder: "Confirmação da password do administrador" %>
			</div>
			<div class="form-group">
				<button class="btn btn-primary" type="submit">Salvar</button>
			</div>
		<% end %>
	</div>
</div>