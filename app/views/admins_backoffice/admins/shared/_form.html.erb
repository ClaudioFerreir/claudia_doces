<div class="col-sm-12 col-md-12 col-lg-8 offset-lg-2">

    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="page-header"><%= "#{action_message} Administrador" %></h1>
    </div>


	<% if @admin.errors.any? %>
        <div class="alert alert-danger alert-dismissable pb-0">
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
            
            <ul>
              <% @admin.errors.full_messages.each do |message| %>
                <li> <%= message %> </li>
              <% end %>
            </ul>
        </div>
    <% end %>

	<div class="card">
		<div class="card-body">
			<%= form_with(model: [ :admins_backoffice, @admin ], local:true) do |form| %>
				<div class="form-group">
					<%= form.label :email %>
					<%= form.text_field :email, class: "form-control mb-3", placeholder: "Email do administrador" %>
				</div>
				<div class="form-group">
					<%= form.label :senha %>
					<%= form.password_field :password, class: "form-control mb-3", placeholder: "Password do administrador" %>
				</div>
				<div class="form-group">
					<%= form.label :confirmação_da_senha %>
					<%= form.password_field :password_confirmation, class: "form-control mb-3", placeholder: "Confirmação da password do administrador" %>
				</div>
				<div class="form-group">
					<button class="btn btn-primary" type="submit">Salvar</button>
				</div>
			<% end %>
		</div>
	</div>
</div>