<body class="bg-primary">
							
        <div id="layoutAuthentication">
            <div id="layoutAuthentication_content">
                <main>
                    <div class="container">
                        <div class="row justify-content-center">
                            <div class="col-lg-7">
																<% if @user.errors.any? %>
																		<div class="alert alert-danger alert-dismissable pb-0">
																				<button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
																				
																				<ul>
																					<% @user.errors.full_messages.each do |message| %>
																						<li> <%= message %> </li>
																					<% end %>
																				</ul>
																		</div>
																<% end %>
                                <div class="card shadow-lg border-0 rounded-lg mt-5">
                                    <div class="card-header"><h3 class="text-center font-weight-light my-4">Dados do Perfil</h3></div>
																			<div class="card-body">
																					<%= form_with(url: users_backoffice_profile_path, model: @user, local:true) do |form| %>
																							<div class="row mb-3">
																								<div class="col-md-6">
																										<div class="form-floating mb-3 mb-md-0">
																												<%= form.label :nome %>
																												<%= form.text_field :first_name, class: "form-control", placeholder: "Digite o seu nome" %>
																										</div>
																								</div>
																								<div class="col-md-6 mb-3">
																										<div class="form-floating">
																												<%= form.label :sobrenome %>
																												<%= form.text_field :last_name, class: "form-control", placeholder: "Digite o seu sobrenome" %>
																									  </div>
																								</div>
																						
																								<div class="form-floating col-md-12 mb-3">
																										<%= form.label :email %>
																										<%= form.text_field :email, class: "form-control", readonly: true %>
																								</div>
																							
																								<%= form.fields_for :user_profile do |profile_form|%>
																									<div class="form-floating col-md-12 mb-3">
																											<%= profile_form.label :endereço %>
																											<%= profile_form.text_field :address, class: "form-control" %>
																									</div>
																									
																									<div class="form-floating col-md-6 mb-3">
																											<%= profile_form.label :genero %>
																											<%= profile_form.text_field :gender, class: "form-control" %>
																									</div>
																								
																									<div class="form-floating col-md-6 mb-3">
																											<%= profile_form.label :data_de_nascimento %>
																											<%= profile_form.text_field :birthdate, class: "form-control" %>
																									</div>
																								<% end %>
																								
																								<div class="col-md-6">
																										<div class="form-floating mb-3 mb-md-0">
																												<%= form.label :password, placeholder: "Insira o seu password" %>
																												<%= form.password_field :password, class: "form-control" %>
																										</div>
																								</div>
																								<div class="col-md-6">
																										<div class="form-floating mb-3 mb-md-0">
																												<%= form.label :confirmação_do_password, placeholder: "Confirme o seu password" %>
																												<%= form.password_field :password_confirmation, class: "form-control" %>
																										</div>
																								</div>
																							</div>  
																							<div class="mt-4 mb-0">
																								<div class="d-grid"><button class="btn btn-primary btn-block" type="submit">Salvar</button></div>
																							</div>
																					<% end %>
																			</div>
                                </div>
                            </div>
                        </div>
                    </div>
                </main>
            </div>

					
            <div id="layoutAuthentication_footer">
                <footer>
                  
                </footer>
            </div>
        </div>
        
				<%= javascript_include_tag 'application' %>
				<%= javascript_include_tag 'users_backoffice' %>
				
				<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
        <script src="js/scripts.js"></script>

		<% if notice %>
			<%= javascript_tag do %>
					$.bootstrapGrowl("<%= notice %>", {
											type: 'success', // (null, 'info', 'danger', 'success')
											align: 'right', // ('left', 'right', or 'center')
											allow_dismiss: true, // If true then will display a cross to close the popup.
											stackup_spacing: 10 // spacing between consecutively stacked growls.
									});
			<% end %>
		<% end %>
    

</body>