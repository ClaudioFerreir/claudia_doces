<div class="row">
    <div class="col-lg-5 d-none d-lg-block bg-register-image"></div>
    <div class="col-lg-7">
        <div class="p-5">
            <div class="text-center">
                <h1 class="h4 text-gray-900 mb-4">Cadastre-se!</h1>
            </div>
            <%= form_for(resource, as: resource_name, url: registration_path(resource_name), class: "user") do |f| %>
              <div class="form-group">
                <%= f.email_field :email, autofocus: true, placeholder: "Email", class:"form-control form-control-user" %>
              </div>
              <div class="form-group"> 
                <%= f.password_field :password, autofocus: true, placeholder:"Senha", class:"form-control form-control-user" %>
              </div>
              <div class="form-group">
                <%= f.password_field :password_confirmation, autofocus: true, placeholder:"Confirme sua Senha", class:"form-control form-control-user" %>
              </div>
              <div class="actions">
                <%= f.submit "Cadastrar", class:"btn btn-primary btn-user btn-block" %>
              </div>
            <% end %>  
        </div>
    </div>
</div>

