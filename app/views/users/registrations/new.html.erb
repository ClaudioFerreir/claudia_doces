                <h1 class="h4 text-gray-900 mb-4">Cadastre-se!</h1>
            </div>
            <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
              <%= f.error_notification %>
              <div class="form-group">
                <%= f.input :email,
                            required: true,
                            autofocus: true,
                            input_html: { autocomplete: "email" }%>
              </div>
              <div class="form-group"> 
                <%= f.input :password,
