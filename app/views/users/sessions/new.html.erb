<div class="row">
  <div class="col-lg-6 d-none d-lg-block bg-login-image"></div>
  <div class="col-lg-6">
    <div class="p-5">
      <div class="text-center">
          <h1 class="h4 text-gray-900 mb-4">Log in - Usu√°rio</h1>
      </div>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name), class: "user") do |f| %>
        <div class="form-group">
          <%= f.email_field :email, autofocus: true, placeholder: "Email ...", class:"form-control form-control-user" %>
        </div>
        
        <div class="form-group">
          <%= f.password_field :password, autofocus: true, placeholder:"Senha", class:"form-control form-control-user" %>
        </div>

        <div class="form-group">
          <div class="custom-control custom-checkbox small pl-0">
            <% if devise_mapping.rememberable?%> Lembrar-me
              <%= f.check_box :remember_me %>
            <% end %>
          </div>
        </div>

        <div class="actions">
            <%= f.submit "Entrar", class:"btn btn-primary btn-user btn-block" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
